generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql" // تغییر از sqlite به mysql (برای MariaDB هم همین است)
  url      = env("DATABASE_URL")
}

model Admin {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Product {
  id          String   @id @default(cuid())
  name        String
  description String   @db.Text // اضافه کردن @db.Text برای متن‌های طولانی
  price       Float
  fileUrl     String?
  imageUrl    String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Order {
  id            String   @id @default(cuid())
  refId         String?  @unique
  trackingCode  String?  @unique
  amount        Float
  quantity      Int      @default(1)
  status        String   @default("PENDING") // PENDING, PAID, FAILED
  
  customerEmail String?
  customerPhone String?
  
  downloadToken String?  @unique
  downloadCount Int      @default(0)
  customData    String?  @db.Text // اضافه کردن @db.Text چون JSON ممکن است طولانی باشد
  
  links         DownloadLink[]

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model CustomField {
  id          String   @id @default(cuid())
  label       String
  name        String   @unique
  type        String
  required    Boolean  @default(false)
  options     String?  @db.Text // گزینه‌ها ممکن است زیاد باشند
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model DownloadLink {
  id         String   @id @default(cuid())
  url        String   @db.Text // لینک‌ها ممکن است خیلی طولانی باشند
  status     String   @default("AVAILABLE") // AVAILABLE, USED
  
  orderId    String?
  order      Order?   @relation(fields: [orderId], references: [id])
  
  consumedAt DateTime?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  
  // ایجاد ایندکس روی orderId برای سرعت بالاتر در جستجو (اختیاری ولی پیشنهادی)
  @@index([orderId])
}