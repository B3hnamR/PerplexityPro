generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Admin {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Product {
  id          String   @id @default(cuid())
  name        String
  description String
  price       Float
  fileUrl     String?  // مسیر فایل یا لینک برای محصولات ساده
  imageUrl    String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Order {
  id            String   @id @default(cuid())
  refId         String?  @unique // شناسه پرداخت زرین‌پال
  trackingCode  String?  @unique // کد پیگیری کوتاه
  amount        Float
  quantity      Int      @default(1)
  status        String   @default("PENDING") // PENDING, PAID, FAILED, REFUNDED
  
  // اطلاعات مشتری (ایمیل اختیاری شده تا با فرم خرید هماهنگ باشد)
  customerEmail String?
  customerPhone String?
  
  downloadToken String?  @unique // توکن امن برای صفحه تحویل
  downloadCount Int      @default(0)
  customData    String?  // ذخیره اطلاعات فیلدهای اضافی به صورت JSON
  
  // ارتباط با لینک‌های تحویل داده شده
  links         DownloadLink[]

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model CustomField {
  id          String   @id @default(cuid())
  label       String
  name        String   @unique
  type        String   // text, number, select, etc.
  required    Boolean  @default(false)
  options     String?  // گزینه‌ها برای select به صورت JSON
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model DownloadLink {
  id         String   @id @default(cuid())
  url        String
  status     String   @default("AVAILABLE") // AVAILABLE, USED
  
  orderId    String?
  order      Order?   @relation(fields: [orderId], references: [id])
  
  consumedAt DateTime?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}